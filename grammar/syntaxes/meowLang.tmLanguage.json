{
    "name": "meowLang",
    "scopeName": "source.meowLang",
    "patterns": [
        { "include": "#keywords" },
        { "include": "#numbers" },
        { "include": "#entities" }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.var.scoped.meowLang",
                    "match": "\\b(let)\\b"
                },
                {
                    "name": "keyword.var.global.meowLang",
                    "match": "\\b(static)\\b"
                },
                {
                    "name": "keyword.other.exit.meowLang",
                    "match": "\\b(exit)\\b"
                },
                {
                    "name": "keyword.operator.add.meowLang",
                    "match": "\\+"
                },
                {
                    "name": "keyword.operator.sub.meowLang",
                    "match": "-"
                },
                {
                    "name": "keyword.operator.mul.meowLang",
                    "match": "\\*"
                },
                {
                    "name": "keyword.operator.div.meowLang",
                    "match": "/"
                },
                {
                    "name": "keyword.operator.mov.meowLang",
                    "match": "="
                }
            ]
        },
        "entities": {
            "patterns": [
                {
                    "name": "entity.name.tag.asm.meowLang",
                    "match": "\\b(asm)\\b"
                },
                {
                    "name": "entity.name.func.meowLang",
                    "match": "\\b(func)\\b"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.meowLang",
                    "match": "[0-9]+"
                }

            ]
        }
    }
}